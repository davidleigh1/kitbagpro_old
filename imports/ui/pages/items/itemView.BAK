{{#if Template.subscriptionsReady}}

<div class="screen-wrapper objAddEdit orgView">
		<!-- Page Heading -->
<!-- 		{{> pageHeader
			pageTitle = getTitle
			pageSubtitle = ""
			faIcon = getIcon
			}} -->

	{{#with thisOrg}}
	<div class="row">

		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">

<!-- 					{{> pageHeader
						pageTitle = getTitle
						pageSubtitle = ""
						faIcon = getIcon
						}} -->

						<!-- <i class="fa fa-building"></i> -->
						{{orgTitle}}
						<small>{{pageSubtitle}}</small>

					</h3>
				</div>
				<div class="panel-body">
					<!-- <h2>Bordered with Striped Rows</h2> -->
					<div class="table-responsive">
						<table class="table table-hover">
							<!-- <thead>
								<tr>
									<th>Page</th>
									<th>Visits</th>
									<th>% New Visits</th>
									<th>Revenue</th>
								</tr>
							</thead> -->
							<tbody>
								<tr>
									<th class="col-xs-2">Name</th>
									<td class="col-xs-10">{{orgTitle}}</td>
								</tr>
								<tr>
									<th>Status</th>
									<td><span class="label {{getOrgStatusTag.labelClass}}">{{getOrgStatusTag.labelText}}</span></td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{orgDesc}}</td>
								</tr>
								<tr>
									<th>Website</th>
									<td><a href="{{orgUrl}}">{{orgUrl}}</a></td>
								</tr>
								<tr>
									<th>Contact Person</th>
									<td>{{orgContactPerson}}</td>
								</tr>
								<tr>
									<th>Contact Phone</th>
									<td>{{orgContactPhone}}</td>
								</tr>
								<tr>
									<th>Contact Email</th>
									<td><a href="mailto:{{orgContactEmail}}">{{orgContactEmail}}</a></td>
								</tr>
								<tr>
									<th>Profile Photo</th>
									<td>{{orgImgLarge}}</td>
								</tr>
								<tr>
									<th>Profile Icon</th>
									<td>{{orgImgSmall}}</td>
								</tr>
								<tr>
									<th>Admin Details</th>
								</tr>
								<tr>
									<th>API-ID <span class="subtitle">(External ID)</span></th>
									<td>{{orgId}}</td>
								</tr>
								<tr>
									<th>DB-ID <span class="subtitle">(Internal ID)</span></th>
									<td>{{_id}}</td>
								</tr>
								<tr>
									<th>Created</th>
									<td>{{createdAt}}</td>
								</tr>
								<tr>
									<th>Last Updated</th>
									<td>{{updatedAt}}</td>
								</tr>
								<tr>
									<th>Owner</th>
									<td>
									{{#if userNameLookup owner "html"}}
										{{userNameLookup owner "html"}} (api: {{userNameLookup owner "apiId"}} / db: {{owner}})
									{{else}}
										{{owner}} (User details not found)
									{{/if}}
									</td>
								</tr>
								<tr>
									<th>Account Data</th>
									<td>Associated Kitbags => array of Kitbag IDs&#10;Active Users => array of User IDs&#10;Inactive Users => array of User IDs&#10;Deleted Users => array of User ID</td>
								</tr>
							</tbody>
						</table>
					<!-- /table-responsive -->

					<!-- Control Buttons -->
					<a href="edit.html" data-original-title="Edit Organisation" data-toggle="tooltip" type="button" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Edit Profile</a>
					<a href="#" class="btn btn-primary"><i class="fa fa-fw fa-dashboard"></i> Analytics</a>
					<a href="/users/list?org=thisOrgId" class="btn btn-primary"><i class="fa fa-fw fa-users"></i> User List</a>

					</div>
				<!-- /panel-body -->
				</div>
			<!-- /panel-default -->
			</div>
		<!-- /col-12 -->
		</div>
	<!-- /row -->
	</div>
	{{/with}}

<hr>
